.hackv{
  width: 710rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
}
.title-wrap{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}
.title{
  width: 520rpx;
  font-family: PingFangSC-Regular;
  font-size: 35rpx;
  color: #666666;
  font-weight: bold;
  text-align: left;
}
.twoline{
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
}
.learn-action{
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  text-align: right;
  color: #59c83b;
  margin-right: 20rpx;
}
.posterWrap{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.poster{
  width: 100%;
  height: 300rpx;
  background-color: #000000;
}
.playWrap{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  background-color: rgba(255,255,255,0.3);
}
.play{
  width: 60rpx;
  height: 60rpx;
}
.fullscreen{
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.9);
  z-index: 2;
}
.video{
  width: 750rpx;
  height: 500rpx;
}
.adetail{
  width: 750rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.articles{
  width: 750rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  position: relative;
}
.first{
  padding-left: 40rpx;
}
.text{
  font-size: 35rpx;
  font-family: sans-serif;
  color: #333333;
  margin: 0 8rpx;
}
.words{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 0;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 20rpx;
}
.mark{
  font-size: 35rpx;
  font-family: sans-serif;
  color: #666666;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.word{
  font-size: 35rpx;
  font-family: PingFangSC-Regular;
  color: #ffffff;
  margin: 3rpx;
  box-sizing: border-box;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  background-color: #59c83b;
}
.learn-action{
  width: 710rpx;
  margin-left: 20rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.learn-action-text{
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  color: #ffffff;
}

.start{
  flex: 1;
  width: 750rpx;
  height: 200rpx;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  display: flex;
  background-color: #59c83b;
}
.end{
  flex: 1;
  height: 100rpx;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff6868;
  margin-left: 10rpx;
}
